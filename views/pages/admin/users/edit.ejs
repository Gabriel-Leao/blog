<%- include('../../../partials/header') %>
  <%- include('../../../partials/navbar') %>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h2>Edição de usuário</h2>
      </div>
      <div class="card-body">
        <form action="/admin/users/update" method="post">
          <label for="userEmail">E-mail:</label>
          <input class="form-control mt-1 mb-2" type="email" name="userEmail" id="userEmail" placeholder="email@example.com" value="<%= user.email %>">
          <label for="userPassword">Senha:</label>
          <input class="form-control mt-1" type="password" name="userPassword" id="userPassword" placeholder="*********">
          <input type="hidden" name="id" value="<%= user.id %>">

          <div class="d-grid">
            <button type="submit" class="btn btn-success mt-4 btn-lg">Atualizar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

<%- include('../../../partials/footer') %>